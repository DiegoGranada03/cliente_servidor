datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         Int         @id @default(autoincrement())
  username   String
  email      String      @unique
  password   String
  orders     Order[]     // Relación uno a muchos con Order
  references Reference[] // Relación uno a muchos con Reference
}

model Order {
  id       Int    @id @default(autoincrement())
  userId   Int
  amount   Float
  status   String
  user     User   @relation(fields: [userId], references: [id])
}

model Reference {
  id       Int    @id @default(autoincrement())
  userId   Int
  status   String
  user     User   @relation(fields: [userId], references: [id])
}